<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    android:orientation="vertical"
    tools:context="com.example.user.UserInfo" >

    <include
        layout="@layout/header_userinfo" />
	

	
	<!-- 家 公司设置框 -->
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="2dip"
	    android:layout_marginBottom="1dip"
	    android:background="#fff"
	    android:orientation="vertical" >
	
		<!-- 家 -->
   		 <LinearLayout 
              android:id="@+id/uesr_func_home"
              android:layout_width="fill_parent"
	    	  android:layout_height="wrap_content"
	    	  android:layout_alignParentLeft="true"
	    	  android:layout_weight="1"
	    	  android:background="#fff">
              <ImageView
                    android:id="@+id/user_func_home_green"
                    android:layout_width="30.0dip" 
                    android:layout_height="30.0dip" 
                    android:layout_margin="15.0dip" 
                    android:src="@drawable/user_func_home_green"/>

              <TextView
                  android:id="@+id/user_func_home_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dip"
                  android:layout_toRightOf="@+id/user_func_home_green"
                  android:ellipsize="marquee"
                  android:fadingEdge="horizontal"
                  android:singleLine="true"
                  android:text="家的地址"
                  android:textColor="#ff222222"
                  android:textSize="18.0dip"
                  android:textStyle="bold"
                  android:typeface="monospace" />
              

          </LinearLayout>
          
          <!-- 公司 -->
          <LinearLayout 
              android:id="@+id/uesr_func_firm"
              android:layout_width="fill_parent"
	    	  android:layout_height="wrap_content"
	    	  android:layout_alignParentRight="true"
	    	  android:layout_weight="1"
	    	  android:background="#fff">
              <ImageView
                    android:id="@+id/user_func_firm_img"
                    android:layout_width="30.0dip" 
                    android:layout_height="30.0dip" 
                    android:layout_margin="15.0dip" 
                    android:src="@drawable/user_func_firm"/>

              <TextView
                  android:id="@+id/user_func_firm_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dip"
                  android:layout_toRightOf="@+id/user_func_firm_img"
                  android:ellipsize="marquee"
                  android:fadingEdge="horizontal"
                  android:singleLine="true"
                  android:text="公司地址"
                  android:textColor="#ff222222"
                  android:textSize="18.0dip"
                  android:textStyle="bold"
                  android:typeface="monospace" />

          </LinearLayout>
          
	</LinearLayout>
	
	<!-- 车辆 亲友设置框 -->
	<LinearLayout 
   	 		android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:layout_weight="1">
          
          <!-- 车辆 -->
   		 <LinearLayout 
              android:id="@+id/uesr_func_car"
              android:layout_width="fill_parent"
	    	  android:layout_height="wrap_content"
	    	  android:layout_alignParentLeft="true"
	    	  android:layout_weight="1"
	    	  android:background="#fff">
              <ImageView
                    android:id="@+id/user_func_car_orange"
                    android:layout_width="30.0dip" 
                    android:layout_height="30.0dip" 
                    android:layout_margin="15.0dip" 
                    android:src="@drawable/user_func_car_orange"/>

              <TextView
                  android:id="@+id/user_func_car_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dip"
                  android:layout_toRightOf="@+id/user_func_car_orange"
                  android:ellipsize="marquee"
                  android:fadingEdge="horizontal"
                  android:singleLine="true"
                  android:text="车辆"
                  android:textColor="#ff222222"
                  android:textSize="18.0dip"
                  android:textStyle="bold"
                  android:typeface="monospace" />

          </LinearLayout>
          
   		
          
	</LinearLayout>
</LinearLayout>