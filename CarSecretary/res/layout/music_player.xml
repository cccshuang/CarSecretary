<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:background="#ff000000" >
    
    
     <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:format="PixelFormat.RGBA_8888"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="20sp"/>

        
     <Button  android:id="@+id/music_del"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/del"/>
    
    <ImageView
            android:id="@+id/music_tosmall"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#00ffffff" 
            android:layout_marginLeft="15dp"
             android:layout_marginTop="25dp"
            android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            android:format="PixelFormat.RGBA_8888"
            android:src="@drawable/music_to_samll" />
        
    <LinearLayout
        android:id="@+id/music_btnControl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00ffffff"
        android:format="PixelFormat.RGBA_8888"
        android:gravity="center"
        android:orientation="horizontal" >
       
        

         <ImageView
            android:id="@+id/music_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:background="#00ffffff" 
            android:format="PixelFormat.RGBA_8888"
            android:src="@drawable/widget_prev_button" />

        <ImageView
            android:id="@+id/music_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:format="PixelFormat.RGBA_8888"
            android:src="@drawable/widget_play_button" />

        <ImageView
            android:id="@+id/music_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:format="PixelFormat.RGBA_8888"
            android:layout_marginLeft="20sp"
            android:src="@drawable/widget_next_button" />
    </LinearLayout>
  <SeekBar
        android:id="@+id/music_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         android:max="100"
        android:layout_gravity="center"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:progressDrawable="@drawable/progress_holo_light"
        android:thumb="@drawable/detail_icon_schedule_ball" 
         android:layout_below="@+id/music_btnControl"  />
    




</RelativeLayout>